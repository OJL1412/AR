<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical"
    tools:context=".Mine.FeedbackActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/info_help_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#EDEDED"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="帮助反馈"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.Toolbar>


        <!--                //深色调-->
        <!--                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--                app:popupTheme="@style/Theme.AppCompat.Light"-->

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/info_help_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="常见问题"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <TextView
            android:id="@+id/info_help_pro1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:drawableRightCompat="@mipmap/ic_arrow"
            android:text="查询订单成功却不显示"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <TextView
            android:id="@+id/info_help_pro2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:drawableRightCompat="@mipmap/ic_arrow"
            android:text="如何发布订单"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <TextView
            android:id="@+id/info_help_pro3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:drawableRightCompat="@mipmap/ic_arrow"
            android:text="如何重置密码"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <TextView
            android:id="@+id/info_help_pro4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@color/white"
            app:drawableRightCompat="@mipmap/ic_arrow"
            android:text="如何取消订单"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>