<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/translucent4"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rdg_pick5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/send_fruits"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="送水果"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/tv_type_selected"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>

            <RadioButton
                android:id="@+id/send_references"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="送资料"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/tv_type_selected"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>

            <RadioButton
                android:id="@+id/send_flowers"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="送鲜花"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/tv_type_selected"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rdg_pick6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/send_boxes"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="送包裹"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/tv_type_selected"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>

            <RadioButton
                android:id="@+id/send_own"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="自定义"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@drawable/text_color"
                android:background="@drawable/tv_type_selected"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/invisible_send"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@drawable/translucent4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义名字:"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <EditText
                android:id="@+id/send_self_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""
                android:textSize="12sp"
                android:hint="请输入"
                android:background="@null"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:text="立即下单"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/translucent5"/>

    </LinearLayout>
</LinearLayout>