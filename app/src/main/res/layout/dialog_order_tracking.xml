<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/track"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_reward_paid"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/info_btn_middle"
            android:text="悬赏已支付" />

<!--        <ImageView-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="10dp"-->
<!--            android:background="#AAAAAA" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_arrow_top" />

        <TextView
            android:id="@+id/tv_reward_finish"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/info_btn_middle"
            android:text="悬赏已完成" />

<!--        <ImageView-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="10dp"-->
<!--            android:background="#00000000" />-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_arrow_top" />

        <!--        #00000000为透明纯白-->

        <TextView
            android:id="@+id/tv_reward_running"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/info_btn_middle"
            android:text="悬赏进行中" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_arrow_top" />

        <TextView
            android:id="@+id/tv_reward_onOffer"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/info_btn_middle"
            android:text="悬赏待接单" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>