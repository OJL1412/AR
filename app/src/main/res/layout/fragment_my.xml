<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/info_my_head"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:background="#1C92F2"
        android:clickable="true"
        android:focusable="true" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_icon_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20sp"
            android:src="@mipmap/ic_dog" />

        <LinearLayout
            android:id="@+id/info_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mail"
                android:text="OJL"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="邮箱：1791088334@qq.com"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/info_my_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_account"
            android:drawablePadding="10dp"
            android:text="账号与安全"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/info_my_about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_about"
            android:drawablePadding="10dp"
            android:text="关于AR速递"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:id="@+id/diver_line"
            android:layout_above="@+id/id_bottom_tags"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"/>

        <TextView
            android:id="@+id/info_my_help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_help"
            android:drawablePadding="10dp"
            android:text="帮助与反馈"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/info_my_identity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_identity"
            android:drawablePadding="10dp"
            android:text="身份认证"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

<!--        <TextView-->
<!--            android:id="@+id/info_my_change"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->
<!--            android:textSize="15sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:padding="10dp"-->
<!--            android:gravity="center"-->
<!--            android:background="@color/white"-->
<!--            android:text="切换账号"-->
<!--            android:clickable="true"-->
<!--            android:focusable="true" />-->

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="10dp"/>-->

        <TextView
            android:id="@+id/info_my_quit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="退出"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>