<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"
    tools:context=".Mine.AccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/info_account_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#EDEDED"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="账号与安全"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        </androidx.appcompat.widget.Toolbar>


        <!--                //深色调-->
        <!--                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
        <!--                app:popupTheme="@style/Theme.AppCompat.Light"-->

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_account_ID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:text="账号ID"
                android:clickable="true"
                android:focusable="true"
                android:drawableLeft="@mipmap/ic_id"
                app:drawableRightCompat="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/object_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginRight="30sp"
                android:textSize="15sp"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:text="手机号"
                android:clickable="true"
                android:focusable="true"
                android:drawableLeft="@mipmap/ic_phone"
                app:drawableRightCompat="@mipmap/ic_arrow" />

            <TextView
                android:id="@+id/phone_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginRight="30sp"
                android:textSize="15sp"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/info_manage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:text="密码管理"
            android:clickable="true"
            android:focusable="true"
            android:drawableLeft="@mipmap/ic_manage"
            app:drawableRightCompat="@mipmap/ic_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/info_set"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@color/white"
            android:drawablePadding="10dp"
            android:text="更多安全设置"
            android:clickable="true"
            android:focusable="true"
            android:drawableLeft="@mipmap/ic_set"
            app:drawableRightCompat="@mipmap/ic_arrow" />

    </LinearLayout>

</LinearLayout>